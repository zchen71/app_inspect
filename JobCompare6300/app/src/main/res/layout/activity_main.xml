<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvMainMenuId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Main Menu"
        android:textColor="#000000"
        android:textSize="32sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2"
        tools:context=".MainActivity"
        android:layout_centerInParent="true"
        >

        <Button
            android:id="@+id/jobInfoBtn"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="onHandleClick"
            android:text="Job Info"
            android:textSize="16sp" />

        <Button
            android:id="@+id/jobOfferBtn"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="onHandleClick"
            android:text="Job Offer"
            android:layout_gravity="end"
            android:textSize="16sp" />

        <Button
            android:id="@+id/offerComparisonBtn"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="onHandleClick"
            android:text="Offer Comparison"
            android:layout_marginTop="16dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/comparisonSettingBtn"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="end"
            android:onClick="onHandleClick"
            android:text="Comparison Setting"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            />

    </GridLayout>


